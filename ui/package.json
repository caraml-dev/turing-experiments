{
  "name": "xp-ui",
  "version": "0.1.0",
  "private": true,
  "homepage": "/xp",
  "dependencies": {
    "@elastic/datemath": "5.0.3",
    "@elastic/eui": "32.3.0",
    "@gojek/mlp-ui": "1.4.19",
    "@reach/router": "1.3.4",
    "@sentry/browser": "5.15.5",
    "json-bigint": "1.0.0",
    "lint-staged": "^11.1.2",
    "moment": "^2.29.0",
    "object-assign-deep": "^0.4.0",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "resize-observer-polyfill": "^1.5.1",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "@craco/craco": "6.3.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "husky": "^7.0.1",
    "import-sort-style-react": "^5.1.0",
    "node-sass": "^6.0.1",
    "postcss-normalize": "10.0.1",
    "prettier": "^2.3.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "react-scripts": "5.0.0-next.37"
  },
  "resolutions": {
    "react-scripts/**/postcss-normalize": "10.0.1",
    "**/react-beautiful-dnd": "git+https://github.com/gojekfarm/react-beautiful-dnd.git#master"
  },
  "scripts": {
    "start": "PORT=3002 craco start --verbose",
    "build": "craco build",
    "lint": "eslint --max-warnings 0 src",
    "prepare": "cd ../ && husky install ui/.husky"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "react"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --bracket-same-line --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
