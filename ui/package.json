{
  "name": "xp-ui",
  "version": "0.1.0",
  "private": true,
  "homepage": "/xp",
  "dependencies": {
    "@caraml-dev/ui-lib": "^1.13.0-build.1-d1f1876",
    "@elastic/datemath": "^5.0.3",
    "@elastic/eui": "^95.2.0",
    "@emotion/css": "^11.11.2",
    "@emotion/react": "^11.11.4",
    "@sentry/browser": "^7.118.0",
    "json-bigint": "1.0.0",
    "lint-staged": "^11.1.2",
    "moment": "^2.30.1",
    "object-assign-deep": "^0.4.0",
    "proper-url-join": "2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "react-scripts": "^5.0.1",
    "resize-observer-polyfill": "^1.5.1",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "husky": "^7.0.1",
    "import-sort-style-react": "^5.1.0",
    "postcss-normalize": "10.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-import-sort": "^0.0.7",
    "sass": "^1.77.2"
  },
  "resolutions": {
    "react-scripts/**/postcss-normalize": "10.0.1",
    "**/react-beautiful-dnd": "git+https://github.com/gojekfarm/react-beautiful-dnd.git#master"
  },
  "engines": {
    "node": ">=20.13.1"
  },
  "scripts": {
    "start": "PORT=3002 craco start --verbose",
    "build": "craco build",
    "lint": "eslint --max-warnings 0 src",
    "prepare": "cd ../ && husky install ui/.husky"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "react"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --bracket-same-line --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
